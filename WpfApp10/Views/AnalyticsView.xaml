<UserControl x:Class="WpfApp10.Views.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <Grid Background="#F5F5F5" Margin="20">

        <Border Background="White"
                CornerRadius="10"
                Padding="20">

            <StackPanel>

                <!-- ЗАГОЛОВОК -->
                <TextBlock Text="Аналитика системы"
                           FontSize="26"
                           FontWeight="Bold"/>

                <TextBlock Text="Проекты, задачи и документы"
                           Foreground="Gray"
                           Margin="0 0 0 15"/>

                <!-- КНОПКИ -->
                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 15">

                    <Button Content="Год"
                            Width="90"
                            Margin="0 0 10 0"
                            Command="{Binding ShowYearCommand}"/>

                    <Button Content="Месяц"
                            Width="90"
                            Margin="0 0 10 0"
                            Command="{Binding ShowMonthCommand}"/>

                    <Button Content="Сегодня"
                            Width="90"
                            Margin="0 0 20 0"
                            Command="{Binding ShowTodayCommand}"/>

                    <Button Content="Экспорт в Excel"
                            Width="160"
                            Command="{Binding ExportExcelCommand}"/>

                </StackPanel>

                <!-- ГРАФИК (БЕЗ AXIS!) -->
                <lvc:CartesianChart Series="{Binding SeriesCollection}"
                                    LegendLocation="Right"
                                    Height="400"/>

            </StackPanel>

        </Border>

    </Grid>
</UserControl>
