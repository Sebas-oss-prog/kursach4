<UserControl x:Class="WpfApp10.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:WpfApp10.Helpers">

    <UserControl.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <helpers:NullToBoolConverter x:Key="NullToBool"/>
    </UserControl.Resources>

    <Grid Margin="20">

        <!-- ЛЕВАЯ ЧАСТЬ -->
        <StackPanel>

            <TextBlock Text="Документы"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Button Content="Добавить"
                        Width="100"
                        Command="{Binding AddCommand}"/>

                <Button Content="Редактировать"
                        Width="120"
                        Margin="10 0 0 0"
                        Command="{Binding EditCommand}"
                        IsEnabled="{Binding SelectedDocument, Converter={StaticResource NullToBool}}"/>

                <Button Content="Удалить"
                        Width="100"
                        Margin="10 0 0 0"
                        Command="{Binding DeleteCommand}"
                        IsEnabled="{Binding SelectedDocument, Converter={StaticResource NullToBool}}"/>
            </StackPanel>

            <ListView ItemsSource="{Binding Documents}"
                      SelectedItem="{Binding SelectedDocument}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD"
                                BorderThickness="0 0 0 1"
                                Padding="6">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Type}"
                                           Opacity="0.7"/>
                                <TextBlock Text="{Binding Author}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>

        <!-- ПРАВАЯ ПАНЕЛЬ -->
        <Border Width="350"
                Padding="20"
                Background="#F4F4F4"
                HorizontalAlignment="Right"
                Visibility="{Binding IsEditorVisible, Converter={StaticResource BoolToVisibility}}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- КРЕСТИК -->
                <Button Grid.Row="0"
                        Content="✕"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="16"
                        Command="{Binding CloseCommand}"/>

                <!-- КОНТЕНТ -->
                <StackPanel Grid.Row="1">

                    <TextBlock Text="{Binding PanelTitle}"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0 0 0 20"/>

                    <TextBlock Text="Название"/>
                    <TextBox Text="{Binding SelectedDocument.Title}"
                             Margin="0 5 0 15"/>

                    <TextBlock Text="Тип"/>
                    <TextBox Text="{Binding SelectedDocument.Type}"
                             Margin="0 5 0 15"/>

                    <TextBlock Text="Автор"/>
                    <ComboBox ItemsSource="{Binding Employees}"
                              SelectedItem="{Binding SelectedDocument.AuthorEmployee}"
                              DisplayMemberPath="FullName"
                              Margin="0 5 0 15"/>

                    <Button Content="Сохранить"
                            Height="35"
                            Width="200"
                            Command="{Binding SaveCommand}"/>

                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
