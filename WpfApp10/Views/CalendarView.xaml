<UserControl x:Class="WpfApp10.Views.CalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfApp10.ViewModels">

    <!-- ViewModel -->
    <UserControl.DataContext>
        <vm:CalendarViewModel/>
    </UserControl.DataContext>

    <Grid Margin="12">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 12">

            <Button Content="◄"
                    Width="32"
                    Margin="4"
                    Command="{Binding PrevMonthCommand}"/>

            <TextBlock Text="{Binding MonthTitle}"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="12 0"/>

            <Button Content="►"
                    Width="32"
                    Margin="4"
                    Command="{Binding NextMonthCommand}"/>
        </StackPanel>

        <!-- ================= CALENDAR ================= -->
        <ItemsControl Grid.Row="1"
                      ItemsSource="{Binding Days}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <Border Margin="5"
                            Padding="6"
                            CornerRadius="8"
                            Background="White"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1">

                        <!-- SCALE ON HOVER -->
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="scale"
                                            ScaleX="1"
                                            ScaleY="1"/>
                        </Border.RenderTransform>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.1"
                                                         Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="scale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.1"
                                                         Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1"
                                                         Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="scale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1"
                                                         Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- DAY NUMBER -->
                            <TextBlock Text="{Binding Day}"
                                       FontWeight="Bold"/>

                            <!-- DOT -->
                            <Ellipse Grid.Row="2"
                                     Width="7"
                                     Height="7"
                                     HorizontalAlignment="Center"
                                     Margin="0 6 0 0"
                                     Fill="DodgerBlue"
                                     Visibility="{Binding HasAny,
                                     Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>

                        <!-- ================= TOOLTIP ================= -->
                        <Border.ToolTip>
                            <ToolTip>
                                <StackPanel Width="220">

                                    <TextBlock Text="{Binding Date,
                                        StringFormat='dd MMMM yyyy'}"
                                               FontWeight="Bold"
                                               Margin="0 0 0 6"/>

                                    <!-- TASKS -->
                                    <TextBlock Text="Задачи:"
                                               FontWeight="Bold"
                                               Margin="0 4 0 2"/>

                                    <ItemsControl ItemsSource="{Binding Tasks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=.,
                                                    StringFormat=• {0}}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- PROJECTS -->
                                    <TextBlock Text="Проекты:"
                                               FontWeight="Bold"
                                               Margin="0 6 0 2"/>

                                    <ItemsControl ItemsSource="{Binding Projects}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=.,
                                                    StringFormat=• {0}}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- DOCUMENTS -->
                                    <TextBlock Text="Документы:"
                                               FontWeight="Bold"
                                               Margin="0 6 0 2"/>

                                    <ItemsControl ItemsSource="{Binding Documents}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Path=.,
                                                    StringFormat=• {0}}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>
                            </ToolTip>
                        </Border.ToolTip>

                    </Border>

                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

    </Grid>
</UserControl>
