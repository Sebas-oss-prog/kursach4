<UserControl x:Class="WpfApp10.Views.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:WpfApp10.Helpers">

    <UserControl.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <helpers:NullToBoolConverter x:Key="NullToBool" />
    </UserControl.Resources>

    <Grid Margin="20">

        <!-- ================== ЛЕВАЯ ЧАСТЬ ================== -->
        <StackPanel>

            <TextBlock Text="Задачи"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0 0 0 10" />

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">

                <Button Content="Добавить"
                        Width="100"
                        Command="{Binding AddCommand}" />

                <Button Content="Редактировать"
                        Width="120"
                        Margin="10 0 0 0"
                        Command="{Binding EditCommand}"
                        IsEnabled="{Binding SelectedTask, Converter={StaticResource NullToBool}}" />

                <Button Content="Удалить"
                        Width="100"
                        Margin="10 0 0 0"
                        Command="{Binding DeleteCommand}"
                        IsEnabled="{Binding SelectedTask, Converter={StaticResource NullToBool}}" />

            </StackPanel>

            <!-- СПИСОК ЗАДАЧ -->
            <ListView ItemsSource="{Binding Tasks}"
                      SelectedItem="{Binding SelectedTask}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD"
                                BorderThickness="0 0 0 1"
                                Padding="6">

                            <StackPanel>

                                <TextBlock Text="{Binding Title}"
                                           FontWeight="Bold"
                                           FontSize="14"/>

                                <TextBlock Text="{Binding Description}"
                                           FontSize="12"
                                           Opacity="0.7"/>

                                <StackPanel Orientation="Horizontal"
                                            Margin="0 4 0 0">

                                    <TextBlock Text="Исполнитель: "
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding AssignedTo}"/>

                                    <TextBlock Text="   Дедлайн: "
                                               FontWeight="Bold"
                                               Margin="10 0 0 0"/>
                                    <TextBlock Text="{Binding Deadline}"/>

                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Margin="0 2 0 0">

                                    <TextBlock Text="Статус: "
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Status}"/>

                                    <TextBlock Text="   Прогресс: "
                                               FontWeight="Bold"
                                               Margin="10 0 0 0"/>
                                    <TextBlock Text="{Binding Progress}"/>
                                    <TextBlock Text="%" />

                                </StackPanel>

                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackPanel>

        <!-- ================== ПРАВАЯ ПАНЕЛЬ ================== -->
        <Border Width="350"
                Padding="20"
                Background="#F4F4F4"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Visibility="{Binding IsEditorVisible, Converter={StaticResource BoolToVisibility}}">

            <Grid>

                <Button Content="✕"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="16"
                        Command="{Binding CloseCommand}"/>

                <StackPanel Margin="0 40 0 0">

                    <TextBlock Text="{Binding PanelTitle}"
                               FontWeight="Bold"
                               FontSize="18"
                               Margin="0 0 0 20"/>

                    <TextBlock Text="Название:" />
                    <TextBox Text="{Binding SelectedTask.Title}"
                             Margin="0 5 0 15" />

                    <TextBlock Text="Описание:" />
                    <TextBox Text="{Binding SelectedTask.Description}"
                             Margin="0 5 0 15" />

                    <TextBlock Text="Дедлайн:" />
                    <TextBox Text="{Binding SelectedTask.Deadline}"
                             Margin="0 5 0 15" />

                    <TextBlock Text="Статус:" />
                    <TextBox Text="{Binding SelectedTask.Status}"
                             Margin="0 5 0 15" />

                    <TextBlock Text="Исполнители:" />

                    <ListBox ItemsSource="{Binding Employees}"
                             DisplayMemberPath="FullName"
                             SelectionMode="Multiple"
                             helpers:ListBoxSelectedItemsBehavior.SelectedItems="{Binding SelectedEmployees}"
                             Height="120"
                             Margin="0 5 0 15"/>

                    <Button Content="Сохранить"
                            Width="200"
                            Height="35"
                            Command="{Binding SaveCommand}" />

                </StackPanel>
            </Grid>

        </Border>

    </Grid>
</UserControl>
