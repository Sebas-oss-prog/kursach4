<UserControl x:Class="WpfApp10.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <!-- ================= РЕСУРСЫ ================= -->
    <UserControl.Resources>

        <!-- КАРТОЧКА ДАШБОРДА -->
        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0 0 16 16"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.04" ScaleY="1.04"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <!-- ================= ОСНОВНАЯ СЕТКА ================= -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= ЗАГОЛОВОК ================= -->
        <TextBlock Text="Главная"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <!-- ================= ПОИСК ================= -->
        <StackPanel Grid.Row="1" Margin="0 0 0 25">

            <Grid>
                <TextBox Height="42"
                         FontSize="16"
                         Padding="14 6"
                         VerticalContentAlignment="Center"
                         Text="{Binding SearchText,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Поиск по задачам, проектам, документам..."
                           Margin="18 0 0 0"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SearchText}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Border Margin="0 6 0 0"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Visibility="{Binding HasSearchResults,
                        Converter={StaticResource BoolToVisibility}}">

                <ListView ItemsSource="{Binding SearchResults}"
                          SelectedItem="{Binding SelectedSearchResult}"
                          Height="160"
                          BorderThickness="0">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="6"
                                    Padding="12"
                                    CornerRadius="8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Background="White">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Type}"
                                               FontSize="12"
                                               Opacity="0.6"
                                               Margin="0 4 0 0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Border>
        </StackPanel>

        <!-- ================= ОСНОВНОЙ КОНТЕНТ ================= -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== КАРТОЧКИ-СЧЁТЧИКИ ===== -->
            <WrapPanel Margin="0 0 20 0">

                <Border Style="{StaticResource DashboardCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📁 Проекты"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ProjectsCount}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                        <TextBlock Text="Всего проектов"
                                   Opacity="0.6"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DashboardCardStyle}">
                    <StackPanel>
                        <TextBlock Text="✅ Задачи"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TasksCount}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                        <TextBlock Text="Всего задач"
                                   Opacity="0.6"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DashboardCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📄 Документы"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DocumentsCount}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="0 10 0 0"/>
                        <TextBlock Text="Всего документов"
                                   Opacity="0.6"/>
                    </StackPanel>
                </Border>

            </WrapPanel>

            <!-- ===== ГРАФИКИ ===== -->
            <StackPanel Grid.Column="1">

                <TextBlock Text="Задачи по статусам"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0 0 0 10"/>

                <lvc:PieChart Series="{Binding TasksByStatusSeries}"
                              Height="220"
                              LegendLocation="Right"/>

                <TextBlock Text="Проекты по владельцам"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0 20 0 10"/>

                <lvc:CartesianChart Series="{Binding ProjectsByOwnerSeries}"
                                    Height="220">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding OwnersLabels}"/>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
