<UserControl x:Class="WpfApp10.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto"
             Width="Auto">

    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Padding="30"
                Width="420"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <TextBlock Text="Авторизация"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 25"/>

                <!-- ЛОГИН -->
                <TextBlock Text="Логин"/>
                <TextBox x:Name="LoginBox"
                         Height="36"
                         Background="#eeeeee"
                         BorderThickness="0"
                         Padding="10"
                         Margin="0 0 0 12"/>

                <!-- ПАРОЛЬ -->
                <TextBlock Text="Пароль"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="36"
                             Background="#eeeeee"
                             BorderThickness="0"
                             Padding="10"/>

                <!-- ОШИБКА -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0 10 0 0"
                           TextWrapping="Wrap"/>

                <!-- КНОПКА -->
                <Button Content="Войти"
                        Height="42"
                        Background="#333333"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0 22 0 0"
                        Click="Login_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
